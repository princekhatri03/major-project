<% layout("/layouts/boilerplate") %>
<body class="body">
  <!-- succes -->
    <!-- <h3 class="index-head">All Listings</h3> -->
     <style>
      #filters{
        display:flex;
        flex-wrap:wrap;
        align-items:center;
      }
      .filters{
        text-align:center;
        margin-right:2em;
        margin-top:1.8rem;
        opacity:0.7;
      }
      .filters:hover{
        opacity:1;
        cursor: pointer;
      }
      .tax-info{
        display:none;
      }
      #tax-switch{
        border:1px solid black;
        border-radius:1rem;
        height:3.25rem;
        padding:0.75rem;
        margin-left: 9rem;
        display :flex;
        align-items:center;
        
      }  
     </style>
    <div id="filters">
      <div class="filters">
        <div>
          <i class="fa-solid fa-fire"></i>
        </div>
        <p>
          Trending
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-bed"></i>
        </div>
        <p>
          Room
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-mountain-city"></i>
        </div>
        <p>
          Iconic Cities
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-mountain"></i>
        </div>
        <p>
          Mountains
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-chess-rook"></i>
        </div>
        <p>
          Castles
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-person-swimming"></i>
        </div>
        <p>
          Amazing Pools
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-campground"></i>
        </div>
        <p>
          Camping 
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-cow"></i>
        </div>
        <p>
          Farms
        </p>
      </div>
      <div class="filters">
        <div>
          <i class="fa-solid fa-snowflake"></i>
        </div>
        <p>
          Artic
        </p>
      </div>
      <div id="tax-switch">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Prices after tax</label>
        </div>
      </div>
   
    </div>
    <ul>
      <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 index-row mt-3">
            <% for(let listing of allListing){ %>
            <div class="listcard col" style="width: 18rem;">
              <a  class="listing-list" href="/listing/<%=listing.id%>">
                <img src="<%=listing.image.url%>" class="card-img-top" alt="no image">
                <!-- <div class="card-img-overlay"></div> -->
              <div class="card-body">
                <p class="card-text">
                  <b><%=listing.title%></b><br>
                  &#8377;   <%=listing.price.toLocaleString("en-IN")%>/night
                  <i class="tax-info">&nbsp;+18% GST</i>
                </p>
              </div>
              </a>
              
            </div>
         <% } %>
          </div>
          
         
    </ul>
</body>

<script>
   let taxSwitch =document.getElementById("tax-switch");
   taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo){
      if(info.style.display !="inline"){
      info.style.display = "inline";}
      else{
        info.style.display = "none";
      }
    }
   })
</script>